<div class="text-center">
  <h1>記事の投稿</h1>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @article, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :content, '記事の内容' %>
        <%= f.text_area :content, class: 'form-control', rows:5 %>
      </div>
      <div class="text-center">
        <% if @article.image? %>
          <%= image_tag @article.image.url %>
        <% else %>
          <%= image_tag "/assets/default.jpg", :size => '100x100' %>
        <% end %>
          <button type="button" class="btn btn-outline-secondary rounded-pill m-2">
            <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
          </button>
      </div>
      <div class="text-center">
        <%= f.submit '投稿', class: 'btn btn-primary btn-block m-2' %>
      </div>
    <% end %>
  </div>
</div>
<div class="text-left">
    <%= link_to '一覧に戻る', articles_path %>
</div>