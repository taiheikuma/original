<div class="text-center m-5">
  <h1>ニュース</h1>
</div>
<ul class="list-unstyled">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h3><%= @article.title %></h6>
        <h6><%= simple_format(@article.content) %></h6>
      </div>
      <div class="col-md-6">
        <%= image_tag @article.image.thumbarticle.url if @article.image? %>
      </div>
    </div>
  </div>
</ul>
<div class="text-left">
  <%= link_to "戻る", articles_path %>
</div>
<% if logged_in? %>
  <div class="text-right">
    <%= link_to '記事を編集する', edit_article_path %>
  </div>
<% end %>