<% if logged_in? %>
  <div class="text-center">
    <img src="/assets/header.png" alt="" class="img-fluid">
    <img src="/assets/top.jpg" alt="" class="img-fluid">
  </div>
  <hr>
  <div>
    <h3 class="text-center">New Topics</h3>
    <div>
      <div class="container">
        <div class="row center">
          <% @articles.each do |article| %>
            <div class="col-xl-4 text-center">
              <h5><%= article.title %></h5>
              <p><%= link_to image_tag(article.image.thumbpart.url), article_path(article) %></p>
            </div>
          <% end %>  
        </div>
      </div>
    </div>
    <p class="text-right"><%= link_to "もっと見る", articles_path %></p>
  </div>
  <hr>
  <div>
    <h3 class="text-center">スケジュール</h3>
  </div>
  <hr>
</div>
<% else %>
  <div class="text-center">
    <img src="/assets/header.png" alt="" class="img-fluid">
    <img src="/assets/top.jpg" alt="" class="img-fluid">
  </div>
  <hr>
  <div>
    <h3 class="text-center">New Topics</h3>
    <div>
      <div class="container">
        <div class="row">
          <% @articles.each do |article| %>
            <div class="col-xl-4 text-center cover-img">
              <p><%= link_to image_tag(article.image.thumbpart.url), article_path(article) %></p>
              <h5><%= article.title %></h5>
            </div>
          <% end %>  
        </div>
      </div>
    </div>
    <p class="text-right"><%= link_to "もっと見る", articles_path %></p>
  </div>
  <hr>
  <div>
    <h3 class="text-center">スケジュール</h3>
  </div>
  <hr>
<% end %>