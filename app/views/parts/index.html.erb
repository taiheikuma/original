<div class="text-center m-5">
  <h1>パート一覧</h1>
</div>
<div>
  <div class="container">
    <div class="row center">
      <% @parts.each do |part| %>
        <div class="col-xl-4 text-center">
          <h5><%= part.name %></h5>
          <% if part.image? %>
            <a href=<%= part_path(part) %>><img src="<%= part.image %>" width="250"></a>
          <% else %>
            <a href=<%= part_path(part) %>><img src="/assets/default.jpg" width='250'></a>
          <% end %>  
        </div>
      <% end %>  
    </div>
  </div>
</div>
<div class="text-right">
  <%= link_to 'パートを追加', new_part_path %>
</div>
