<div class="text-center">
  <h1>個人情報の編集</h1>
</div>
  
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :part_id, '楽器' %>
        <%= f.collection_select :part_id, Part.all, :id, :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :birthday, '生年月日' %>
        <%= f.date_select :birthday, use_month_numbers: true,start_year: 1970, end_year: (Time.now.year - 10), default: Date.new(2000, 1, 1), class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :carrer, '経歴' %>
        <%= f.text_area :carrer, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :message, 'メッセージ' %>
        <%= f.text_area :message, class: 'form-control' %>
      </div>
      
      <div>
        <% if @user.image? %>
          <%= image_tag @user.image.url %>
        <% else %>
          <%= image_tag "/assets/default.jpg", :size => '100x100' %>
        <% end %>
          <button type="button" class="btn btn-outline-secondary rounded-pill">
            <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
          </button>
      </div>
      
      <%= f.submit '登録', class: 'btn btn-primary btn-sm' %>
    <% end %>
  </div>
</div>

<%= link_to '一覧に戻る', users_path %>